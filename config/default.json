{
  "env": "development",
  "port": 3000,
  "apiKey": "api-key",
  "db": {
    "url": "postgres://username:password@host:port/database",
    "ssl": false
  },
  "swagger": {
    "enabled": true,
    "endpoint": "docs",
    "title": "nest-boilerplate",
    "description": "A starter template for NestJS with support for swagger, config, logging, validation, exception handling, docker, testing and CI.",
    "contact": {
      "name": "Mark Njung'e",
      "url": "https://marknjunge.com",
      "email": "contact@marknjunge.com"
    }
  },
  "rateLimit": {
    "enabled": true,
    "max": 100,
    "timeWindow": "1m"
  },
  "cors": {
    "origin": "*",
    "methods": "*",
    "allowedHeaders": "*"
  },
  "validator": {
    "forbidUnknown": true
  },
  "logging": {
    "timestampFormat": "YYYY-MM-DD HH:mm:ss.SSS",
    "sensitiveParams": ["password", "x-api-key"],
    "replacementString": "REDACTED"
  }
}

{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2022",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "strictNullChecks": true,
    "paths": {
      "@/*": ["src/*"]
    },
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "scripts/**/*",
    "eslint.config.mjs"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}

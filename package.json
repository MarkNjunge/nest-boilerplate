{
  "name": "nest-boilerplate",
  "version": "0.1.0",
  "description": "A starter template for NestJS with support for database, swagger, config, logging, validation, exception handling, docker, testing and CI.",
  "author": "Mark Njung'e",
  "license": "MIT",
  "scripts": {
    "prepare": "husky",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "docs": "npx compodoc -p tsconfig.json -s",
    "start": "nest start -b swc --type-check",
    "start:dev": "nest start --watch -b swc --type-check",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:e2e": "nest start -b swc",
    "migration:create": "typeorm-ts-node-commonjs migration:create",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d src/modules/_db/data-source.ts",
    "migration:up": "typeorm-ts-node-commonjs migration:run -d -d src/modules/_db/data-source.ts",
    "migration:down": "typeorm-ts-node-commonjs migration:revert -d -d src/modules/_db/data-source.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.{ts,js}\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.{ts,js}\" --fix",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "docker compose -f docker-compose-e2e.yml up --abort-on-container-exit --exit-code-from test",
    "posttest:e2e": "docker compose -f docker-compose-e2e.yml down --rmi all",
    "test:e2e:local": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@fastify/helmet": "^13.0.1",
    "@fastify/multipart": "^9.0.3",
    "@fastify/static": "^8.2.0",
    "@nestjs/common": "^11.1.3",
    "@nestjs/core": "^11.1.3",
    "@nestjs/platform-fastify": "^11.1.3",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/typeorm": "^11.0.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/api-logs": "^0.203.0",
    "@opentelemetry/auto-instrumentations-node": "^0.62.0",
    "@opentelemetry/core": "^2.0.1",
    "@opentelemetry/exporter-logs-otlp-proto": "^0.203.0",
    "@opentelemetry/exporter-metrics-otlp-proto": "^0.203.0",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.203.0",
    "@opentelemetry/resources": "^2.0.1",
    "@opentelemetry/sdk-logs": "^0.203.0",
    "@opentelemetry/sdk-metrics": "^2.0.1",
    "@opentelemetry/sdk-node": "^0.203.0",
    "@opentelemetry/semantic-conventions": "^1.34.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "config": "^4.1.0",
    "dayjs": "^1.11.10",
    "dotenv": "16.6.1",
    "lodash": "^4.17.21",
    "nestjs-cls": "^6.0.1",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.27",
    "ulid": "^3.0.1",
    "winston": "^3.11.0",
    "winston-transport": "^4.6.0"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.23",
    "@eslint/js": "^9.30.1",
    "@marknjunge/eslint-config-ts": "^3.1.0",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.3",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.2",
    "@testcontainers/postgresql": "^11.7.2",
    "@types/flat": "^5.0.5",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.11.16",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.30.1",
    "globals": "^16.3.0",
    "husky": "^9.0.10",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "rimraf": "^5.0.5",
    "sqlite3": "^5.1.7",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.35.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "setupFiles": [
      "../test/util/logging.ts"
    ],
    "moduleNameMapper": {
      "@/(.*)": [
        "<rootDir>/$1"
      ]
    },
    "testTimeout": 30000
  }
}

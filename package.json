{
  "name": "nest-boilerplate",
  "version": "0.1.0",
  "description": "A starter template for NestJS with support for database, swagger, config, logging, validation, exception handling, docker, testing and CI.",
  "author": "Mark Njung'e",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "docs": "npx compodoc -p tsconfig.json -s",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "typeorm": "node --require tsconfig-paths/register -r ts-node/register ./node_modules/typeorm/cli.js -d ./src/db/db-data-source.ts",
    "migration:generate": "npm run typeorm migration:generate ./src/db/migration/%npm_config_name%",
    "migration:generate:u": "npm run typeorm migration:generate ./src/db/migration/$npm_config_name",
    "migration:create": "npm run typeorm migration:create ./src/db/migration/%npm_config_name%",
    "migration:create:u": "npm run typeorm migration:create ./src/db/migration/$npm_config_name",
    "migration:run": "npm run typeorm migration:run",
    "migration:revert": "npm run typeorm migration:revert",
    "lint": "eslint \"{src,apps,libs,test}/**/*.{ts,js}\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.{ts,js}\" --fix",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "docker-compose -f docker-compose-e2e.yml up --abort-on-container-exit --exit-code-from test",
    "posttest:e2e": "docker-compose -f docker-compose-e2e.yml down --rmi all",
    "test:e2e:local": "jest --config ./test/jest-e2e.json",
    "prepare": "husky install"
  },
  "dependencies": {
    "@fastify/helmet": "^10.0.0",
    "@fastify/rate-limit": "^7.4.0",
    "@fastify/static": "^6.5.0",
    "@nestjs/common": "^9.0.11",
    "@nestjs/core": "^9.0.11",
    "@nestjs/platform-fastify": "^9.0.11",
    "@nestjs/swagger": "^6.1.1",
    "@nestjs/typeorm": "^9.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "config": "^3.3.7",
    "dayjs": "^1.11.3",
    "dotenv": "^16.0.1",
    "flat": "^5.0.2",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.5",
    "typeorm": "^0.3.9",
    "winston": "^3.7.2",
    "winston-transport": "^4.5.0"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.19",
    "@marknjunge/eslint-config": "^1.11.0",
    "@marknjunge/eslint-config-ts": "^1.7.0",
    "@nestjs/cli": "^9.1.1",
    "@nestjs/schematics": "^9.0.2",
    "@nestjs/testing": "^9.0.11",
    "@types/flat": "^5.0.2",
    "@types/jest": "^28.1.2",
    "@types/node": "^16.11.7",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "^8.18.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "nodemon": "^2.0.16",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.5",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.8.1",
    "tsconfig-paths": "4.0.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "setupFiles": [
      "../test/util/logging.ts"
    ],
    "moduleNameMapper": {
      "@/(.*)": [
        "<rootDir>/$1"
      ]
    }
  }
}
